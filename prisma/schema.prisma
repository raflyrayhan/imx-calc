// Example datasource & generator:
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}

enum Visibility {
  PUBLIC
  PRIVATE
}

enum Category {
  EBOOK
  DATASHEET
  STANDARD_DRAWING
  CODE_STANDARD
}

model Ebook {
  id         String    @id @default(cuid())
  slug       String    @unique
  title      String
  author     String?
  year       Int?
  pages      Int?
  tags       String[]  @default([])
  category   Category  @default(EBOOK)

  sizeBytes  BigInt
  fileKey    String
  coverKey   String?
  visibility Visibility @default(PRIVATE)
  version    Int        @default(1)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}
